<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.islamic.jakirliton.namazoduya.Namaz">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/tid1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:background="@color/colorPrimary"
                android:typeface="sans"
                android:textAlignment="center"
                android:textColor="#fd080808"
                android:text="নামাজের প্রাথমিক বিষয়াবলী"
                />

            <Button
                android:id="@+id/tid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textSize="35dp"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#fd080808"
                android:text="নামাজের ওয়াক্ত ও রাকাত সমুহ"
                />

            <Button
                android:id="@+id/tid3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="নামাজে দোয়া সমুহ"
                android:textSize="35dp"
                android:background="#ffffff"
                android:textAlignment="center"
                android:layout_margin="7dp"
                android:textColor="#fd080808"/>
            <Button
                android:id="@+id/tid4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textSize="35dp"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#fd080808"
                android:text="নামাজে প্রয়োজনীয় সূরা সমূহ"
                />
            <Button
                android:id="@+id/tid5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:background="#ffffff"
                android:textAlignment="center"
                android:textColor="#fd080808"
                android:layout_margin="7dp"
                android:text="বিভিন্ন নামাজের নিয়ম" />
            <Button
                android:id="@+id/tid6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ধাপে ধাপে নামাজ শিক্ষা"
                android:textSize="35dp"
                android:background="#ffffff"
                android:textAlignment="center"
                android:layout_margin="7dp"
                android:textColor="#fd080808"/>

            <Button
                android:id="@+id/tid7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="নামাজে গুরুত্বপূর্ণ বিষয়"
                android:textSize="35dp"
              android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textColor="#fd080808"/>




        </LinearLayout>



    </ScrollView>



</LinearLayout>
